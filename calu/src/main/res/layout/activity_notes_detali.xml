<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    android:orientation="vertical"


    tools:context="com.pilab.maxu.calculator.calu.notebook.NotesDetaliActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_notebook_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="便签"

            />

    </android.support.design.widget.AppBarLayout>
    <EditText
        android:id="@+id/et_note_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#FFFFFF"
        android:gravity="left|top"
        android:hint="在这里打字\n"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:singleLine="true"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <Button
            android:id="@+id/bt_note_jinghao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="#"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_note_tanhao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="!"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_note_zhongkuohao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="[]"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_note_xiaokuohao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="()"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_note_xinghao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_note_you"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text=">"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_note_daima"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="```"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/bt_note_md_manager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:src="@android:drawable/arrow_down_float"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />


    </LinearLayout>

    <us.feras.mdv.MarkdownView
        android:id="@+id/markdownView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="16dp" />

</LinearLayout>
